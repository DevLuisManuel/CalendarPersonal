# etapa de compilación
FROM node:10-alpine as build-stage
WORKDIR /app
COPY ./Front/package*.json ./
RUN npm install
COPY ./Front/ .
RUN npm run build

# etapa de producción
FROM nginx:alpine as production-stage
COPY --from=build-stage /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]